<%- include("../partials/header") %>

<h2><%= title %></h2>

<a href="/students/add" class="btn">➕ Add Student</a>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Grade</th>
      <th>Favourite Subject</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% students.forEach(student => { %>
    <tr>
      <td><%= student.id %></td>
      <td><%= student.name %></td>
      <td><%= student.grade %></td>
      <td><%= student.favoriteSubject %></td>
      <td>
        <a href="/students/edit/<%= student.id %>">✏️ Edit</a> |
        <a
          href="/students/delete/<%= student.id %>"
          onclick="return confirm('Are you sure you want to delete this student?')"
          >🗑️ Delete</a
        >
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>

<%- include("../partials/footer") %>
