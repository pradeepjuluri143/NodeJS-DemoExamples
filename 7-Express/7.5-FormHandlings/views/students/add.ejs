<%- include("../partials/header") %>

<h2><%= title %></h2>

<% if (error) { %>
<p class="error"><%= error %></p>
<% } %>

<form action="/students/add" method="POST">
  <label>Name:</label>
  <input type="text" name="name" placeholder="e.g., Aarav Sharma" />

  <label>Grade:</label>
  <input type="text" name="grade" placeholder="e.g., 5th" />

  <label>Favourite Subject:</label>
  <input type="text" name="favoriteSubject" placeholder="e.g., Mathematics" />

  <button type="submit">Add Student</button>
</form>

<%- include("../partials/footer") %>
